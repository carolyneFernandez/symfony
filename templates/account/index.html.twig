                <th>Iban</th>
                <th>Balance</th>
                <th>Type</th>
                <th>Mount Debit</th>
                <th>Propietaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
